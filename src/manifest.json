{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "author": "{{prop-loader?author!../package.json}}",
  "version": "{{prop-loader?version!../package.json}}",
  "default_locale": "en",
  "web_accessible_resources": [
    "{{./pages/history.html}}",
    "{{./pages/home.html}}",
    "{{./pages/last-clipping-result.html}}",
    "{{./pages/plan-subscription.html}}",
    "{{./pages/reset-history.html}}",
    "{{./pages/setting.html}}",
    "{{./pages/support.html}}",
    "{{./pages/ui-control.html}}",
    "{{./pages/ui-selection.html}}",
    "{{./pages/welcome.html}}",
    "assets/*",
    "css/*",
    "js/*"
  ],
  "permissions": [
    "<all_urls>",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "downloads",
    "downloads.open",
    "nativeMessaging"
  ],
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "js": [
        "{{spawn-loader!./js/content-frame.js}}"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "js": [
        "{{spawn-loader!./js/content.js}}"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "{{./icons/mx-wc-16.png}}",
    "32": "{{./icons/mx-wc-32.png}}",
    "48": "{{./icons/mx-wc-48.png}}",
    "128": "{{./icons/mx-wc-128.png}}"
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "{{prop-loader?name!../package.json}}",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "{{./icons/mx-wc-16.png}}",
      "32": "{{./icons/mx-wc-32.png}}",
      "48": "{{./icons/mx-wc-48.png}}"
    },
    "theme_icons": [
      {
        "light": "{{./icons/mx-wc-16-light.png}}",
        "dark": "{{./icons/mx-wc-16.png}}",
        "size": 16
      },
      {
        "light": "{{./icons/mx-wc-32-light.png}}",
        "dark": "{{./icons/mx-wc-32.png}}",
        "size": 32
      },
      {
        "light": "{{./icons/mx-wc-48-light.png}}",
        "dark": "{{./icons/mx-wc-48.png}}",
        "size": 48
      }
    ]
  }
}
